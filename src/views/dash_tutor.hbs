        <div class="title-painel">
            <p class="desc">Esse aqui é o seu painel de dúvidas recebidas</p>
        </div>
        {{!-- bootstrap class --}}
        <div class="container">
            <div class="row">
                {{#each data.duvidas}}
                <div class="col-sm">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{dataValues.assuntoDuvida}}</h5>
                            <h6 class="card-subtitle desc"><span class="material-symbols-sharp">
                                    fiber_manual_record
                                </span>{{aluno.nome}}</h6>
                            <p class="card-text desc">{{dataValues.descricaoDuvida}}</p>
                            <div class="links">
                                <a href="#" class="card-link">{{tecnologia.nomeTecnologia}}</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
