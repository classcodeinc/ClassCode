                                    <h5 class="card-title">4.5</h5>
                                </div>
                            </div>
                        </div>
                        <div class="coluna">
                            <div class="card">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <p class="card-text">Ganhos</p>
                                    <h5 class="card-title"><span style="font-size: 22px">$</span>20</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- Lado perfil --}}
                <div class="col coluna-2">
                    <div class="row justify-content-end">
                        <div class="coluna">
                            {{!-- Card mini perfil --}}
                            <div class="card mini-perfil">
                                <div class="card-body">
                                    <p class="card-tag">Tutor</p>
                                    <div class="card-content">
                                        <div class="card-text">
                                            <h5 class="nome">{{user.name}}</h5>
                                            <p class="academic desc">{{user.instEnsino}}</p>
                                            <p class="academic desc">{{user.profissao}}</p>
                                        </div>
                                        <div class="card-img">
                                            <span class="material-symbols-sharp">
                                                fiber_manual_record
                                            </span>
                                            <img src={{user.img}} alt="Imagem de perfil">
                                        </div>
                                    </div>
                                    <div class="card-languages">
                                        <img src="/img/icon/nodejs.svg" alt="Icon referente a linguagem">
